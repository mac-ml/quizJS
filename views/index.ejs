<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://kit.fontawesome.com/09adfda245.js" crossorigin="anonymous"></script> 
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <style>

      *{
        margin: 0;
        padding: 0;
      }

      body{
        margin: 0;
        padding: 0;
        height: 1vh;
      }

      .container{
        width: 50%;
        height: 400px;
        justify-items: center;
        align-items: center;
        margin-top: 200px;
      }

      .card{
        width: 100%;
        border: 2px gray solid;
        margin-top: 40px;
        display: grid;
      }

      .card-body{
        display: flex;
        justify-content: center;
      }

      .item{
        width: 100%;
        height: auto;
        border-bottom: 2px gray solid;
        margin: 30px;
        justify-content: space-evenly;
      }

      .answer-button{
        border: none;
        font-size: 24px;
        width: 100%;
        background-color: bisque;
      }

      .card-header{
        font-size: 24px;
      }

      #answer1, #answer2, #answer3{
        width: 20%;
        background-color: bisque;
        margin: 10px;
        font-size: 24px;
      }

    </style>

    <title>ExamJS</title>
  </head>
  <body>
    <div class="container">
        <h3>Answer the question</h3>
      <div class="card">

      <div class="card-header"><%= data.question %></div>
      <div class="card-body">
          <button id="answer1" type="submit"><%= data.answer1 %></button>
          <button id="answer2" type="submit"><%= data.answer2 %></button>
          <button id="answer3" type="submit"><%= data.answer3 %></button>

          
          <button id="correctAnswer" style="visibility: hidden;"><%= data.correctAnswer %></button>
     </div>
    </div>
    <p style="color: brown; font-size: 18px;">* Select your answer and wait for result</p>

</div>


    <script>
      correctAnswer = document.getElementById("correctAnswer");

      btn1 = document.getElementById("answer1");
      btn1.onclick = ()=>{
          if(btn1.innerText==correctAnswer.innerText){
            window.alert("Your answer is correct");
          }else{
            window.alert("Your answer is wrong");
          }
          
      }

      btn2 = document.getElementById("answer2");
      btn2.onclick = ()=>{
          if(btn2.innerText==correctAnswer.innerText){
            window.alert("Your answer is correct");
          }else{
            window.alert("Your answer is wrong");
          }
          
      }

      btn3 = document.getElementById("answer3");
      btn3.onclick = ()=>{
          if(btn3.innerText==correctAnswer.innerText){
            window.alert("Your answer is correct");
          }else{
            window.alert("Your answer is wrong");
          }
          
      }
    </script>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.14.3/dist/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.1.3/dist/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
    
  </body>
</html>
